{% form_theme form _self %}

{% block form_errors %}

    {% if form.vars.errors.count() > 0 %} {# si (dans toutes les variables) erreur #}

        <div class="ui smaller close col-12 red-500">{# on ouvre une div et on boucle sur le nombre d'erreur a afficher #}
            {% for lesvalues in form.vars.errors %}
                <strong>{{lesvalues.message|trans|capitalize}}</strong>
            {% endfor %}
        </div>    
    {% endif %}

{% endblock %}
